<h1>Profile</h1>
<br>

<h3>Username: <%= current_user.username %></h3>
<br>
<br>

<img src="<%= current_user.image_url %>">
<br>
<br>

<h3>Number of starred repos: </h3>
<h4><%= @starred_repos.count %></h4>
<br>
<br>

<h3><%= @followers.count %> Followers: </h3>
<% @followers.each do |follower| %>
  <h4><%= follower[:login] %></h4>
<% end %>
<br>
<br>

<h3><%= @following.count %> Following: </h3>
<% @following.each do |followed| %>
  <h4><%= followed[:login] %></h4>
<% end %>
<br>
<br>

<h3>Contributions in Last Year: </h3>
<h4><%= @contributions %></h4>
<br>
<br>

<h3>Longest Streak: </h3>
<h4><%= @longest_streak %></h4>
<br>
<br>

<h3>Current Streak: </h3>
<h4><%= @current_streak %></h4>
<br>
<br>

<h3>Recent Commits: </h3>
<% @recent_commits.each do |commit| %>
  <h5><%= commit %></h5>
<% end %>
<br>
<br>

<h3>Recent Commits From Followed Users: </h3>
<br>
<% @recent_following_commits.each do |user_commits| %>
  <h4><%= user_commits[:username] %></h4>
  <% user_commits[:commits].each do |commit| %>
    <h5><%= commit %></h5>
  <% end %>
  <br>
<% end %>
<br>
<br>